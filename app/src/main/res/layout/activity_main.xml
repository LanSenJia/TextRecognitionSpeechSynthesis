<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/result_pop_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="vertical"
    android:scrollbars="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/general_basic_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="通用文字识别"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/accurate_basic_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="通用文字识别(高精度版)"
            android:visibility="gone"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/general_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="通用文字识别（含位置信息版）"
            android:visibility="gone"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/accurate_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="通用文字识别(高精度含位置信息版)"
            android:visibility="gone"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/general_enhance_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="通用文字识别（含生僻字版）"
            android:visibility="gone"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/general_webimage_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="网络图片文字识别"
            android:visibility="gone"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/idcard_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="身份证识别"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/bankcard_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="银行卡识别"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/driving_license_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="驾驶证识别"
            android:visibility="gone"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/vehicle_license_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="行驶证识别"
            android:visibility="gone"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/license_plate_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="车牌识别"
            tools:ignore="HardcodedText" />


        <Button
            android:id="@+id/business_license_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="营业执照识别"
            android:visibility="gone"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/receipt_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="通用票据识别"
            android:visibility="gone"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/passport_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="护照识别"
                android:visibility="gone"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/numbers_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="数字识别"
                android:visibility="gone"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/qrcode_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="二维码识别"
                android:visibility="gone"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/business_card_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="名片识别"
                android:visibility="gone"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/handwritting_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="手写识别"
                android:visibility="gone"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/lottery_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="彩票识别"
                android:visibility="gone"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/vat_invoice_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="增值税发票识别"
                android:visibility="gone"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/custom_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自定义模板识别"
                android:visibility="gone"
                tools:ignore="HardcodedText" />


            <Button
                android:id="@+id/smiley_face_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="笑脸识别"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/car_model_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="车型识别"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/speechrecognition_button_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="语音识别开始"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/speechrecognition_button_stop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="语音识别停止"
                tools:ignore="HardcodedText" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/car_model_iv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/scan_value_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/car_model_iv"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:text="结果扫描中"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone" />


            </RelativeLayout>

            <TextView
                android:id="@+id/re_result_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>